<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:customcontrols="clr-namespace:CreativeArt.Controls">

    <Style x:Key="DragTabControl" TargetType="customcontrols:DragingTabControl">
        <Setter Property="Background" Value="Gray"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="customcontrols:DragingTabControl">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <customcontrols:DragingTabPanel Grid.Row="0"
                                                        IsItemsHost="True"
                                                        Background="{TemplateBinding Background}"/>
                        <Border Grid.Row="1"
                                Background="{TemplateBinding Background}">
                            <ContentControl Content="{Binding SelectedItem.Content, RelativeSource={RelativeSource AncestorType={x:Type customcontrols:DragingTabControl}}}"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
        
</ResourceDictionary>